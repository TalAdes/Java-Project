<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.liran.takeogo.controller.AddActivities.AddClientActivity"
    android:background="@drawable/audi_r8_v10_side_view_road_109803_360x640">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/fnameEditText"
            android:layout_width="625dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="אותיות באנגלית בלבד"
            android:inputType="textPersonName"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="שם פרטי"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <TextView
        android:id="@+id/valid_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/lnameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="אותיות באנגלית בלבד"
            android:inputType="textPersonName"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="שם משפחה"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <TextView
        android:id="@+id/valid_lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/idEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="מספר תז כולל ספרת ביקורת"
            android:inputType="number"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="מספר זהות"
            android:inputType="textPersonName"
            android:text="מספר זהות"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <TextView
        android:id="@+id/id_valid_TW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/phoneNumEditText"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="מספר ישראלי המורכב מספרות בלבד"
            android:inputType="phone"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="מספר טלפון"
            android:textAppearance="@style/TextAppearance.AppCompat"
            tools:text="מספר טלפון"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <TextView
        android:id="@+id/phone_valid_TW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="example@xx.yy"
            android:inputType="textEmailAddress"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="דואר אלקטרוני"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <TextView
        android:id="@+id/email_valid_TW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/numCreditEditText"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="מספר כרטיס אשראי בין לאומי בלבד"
            android:inputType="number"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="מספר אשראי"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <TextView
        android:id="@+id/credit_card_valid_TW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/addClientButton"
        android:layout_width="194dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:shadowColor="#A8A8A8"
        android:shadowDx="-0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="הוסף לקוח"
        android:textColor="#5478F0"
        android:textSize="31sp" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AddCarLiner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.liran.takeogo.controller.AddActivities.AddCarActivity"
    android:background="@drawable/audi_r8_v10_side_view_road_109803_360x640">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="בחר חברה"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <AutoCompleteTextView
        android:id="@+id/CompanyAutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="בחר דגם"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"/>

    <AutoCompleteTextView
        android:id="@+id/ModelAutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="מספר דגם"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"/>

    <AutoCompleteTextView
        android:id="@+id/ModelNumAutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="מספר סניף"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"/>

    <AutoCompleteTextView
        android:id="@+id/BranchAutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/killometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="מספר קילומטר"
        android:inputType="number"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/idCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="מספר המכונית"
        android:inputType="number"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/addCarButton"
        android:layout_width="194dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:shadowColor="#A8A8A8"
        android:shadowDx="-0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="הוסף מכונית"
        android:textColor="#5478F0"
        android:textSize="31sp" />
</LinearLayout>
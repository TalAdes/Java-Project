<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liran.takeogo.controller.ShowActivities.ShowClients"
    android:background="#ffffff">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_add"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="603dp" />

    <ProgressBar
        android:id="@+id/clientProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="376dp"
        android:layout_height="327dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/clientListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/clientListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>



</android.support.constraint.ConstraintLayout>
